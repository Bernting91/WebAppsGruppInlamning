@page
@model WebAppsGruppInlamning.Pages.BuildCarPageModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Build Your Car</title>
    <link rel="stylesheet" type="text/css" href="~/css/BuildCarPage.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="dropdown" id="carDropdown">
                <label for="carSelect">Car:</label>
                <select id="carSelect">
                    <option value="Ferrari">Ferrari</option>
                    <option value="MonsterTruck">Monster Truck</option>
                    <option value="SUV">SUV</option>
                </select>
            </div>
            <div class="dropdown" id="wheelsDropdown">
                <label for="wheelsSelect">Wheels:</label>
                <select id="wheelsSelect">
                    <option value="Regular">Regular</option>
                    <option value="MonsterTruck">Monster Truck</option>
                </select>
            </div>
            <div class="dropdown" id="colorDropdown">
                <label for="colorSelect">Color:</label>
                <select id="colorSelect">
                    <option value="Red">Red</option>
                    <option value="Blue">Blue</option>
                    <option value="Yellow">Yellow</option>
                </select>
            </div>
            <form method="post">
                <button type="button" id="buildCar" class="build-car-btn">Build Car</button>
            </form>
        </div>
        <div class="main-content">
            <img src="~/lib/Images/MechanicCar.webp" alt="Placeholder Car Image">
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/BuildCarPage.js"></script>
</body>
</html>
